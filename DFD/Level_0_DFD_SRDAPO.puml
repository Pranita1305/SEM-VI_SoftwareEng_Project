@startuml
left to right direction
skinparam actorStyle stickman
skinparam shadowing false

skinparam rectangle {
  BackgroundColor #F9F9F9
  BorderColor black
}

skinparam actor {
  BorderColor black
  BackgroundColor #EFEFEF
}

' External Entities
actor User
actor Admin
actor Chatbot
actor "Weather Data Service" as Weather
actor "Authentication Service" as Auth

' Central System
rectangle "SRDAPO System" as SRDAPO

' ---- Data Flows ONLY (no positioning arrows) ----

' User
User --> SRDAPO : Login / View Request
SRDAPO --> User : Demand / Pricing / Heatmap

' Admin
Admin --> SRDAPO : Manage / View Analytics
SRDAPO --> Admin : Reports / Controls

' Chatbot
Chatbot --> SRDAPO : Chat Query
SRDAPO --> Chatbot : Query Response

' External Services
Weather --> SRDAPO : Weather Data
Auth --> SRDAPO : JWT Validation
SRDAPO --> Auth : Auth Request

@enduml